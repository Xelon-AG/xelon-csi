FROM alpine:3.17

RUN apk add --no-cache ca-certificates \
                       blkid \
                       e2fsprogs \
                       e2fsprogs-extra \
                       findmnt \
                       parted \
                       xfsprogs \
    && rm -rf /var/cache/apk/*

ADD xelon-csi /bin/

ENTRYPOINT ["/bin/xelon-csi"]
